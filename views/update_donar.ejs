  <style>
    body{
      background-color: #CD5C5C;
  }
  .home{
    text-align: center;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 30px;
    position: relative;
    top: 100px;
  }
