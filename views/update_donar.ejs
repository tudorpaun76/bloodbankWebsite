<!--SHOWS ERROR IF NO VALUES ARE INPUTTED-->
  <body>
    <% if(error) { %>
        <p class="error">Error: <%= error %></p>
    <% } %>
    
    <!--FORMS FOR USER INPUT-->
    <form action="/donar/update" method="post">
    
      <div class = "name">
      <input type="hidden" name="donar_id" value="<%= donar_id %>" />
      <label for="name">Name:</label>
      <input type="text" name="name" />
      <br>
    </div>

    <div class="contact">
      <label for="address">Address:</label>
      <input type="text" name="address" />
      <br>
      </div>
     
    <div class ="address">
      <label for="contact">Contact:</label>
      <input type="text" name="contact" />
      <br>
    </div>
      

      <div class ="blood">
      <label for="bloodtD">Blood Type:</label>
      <input type="text" name="bloodtD" />
      <br>
    </div>
      
    <div class="update">
      <button type="submit">Update</button>
    </form>
  </div>


<!--HOME AND BACK LINK-->
  <div class="back">
    <a href="/donar">Back</a>
  </div> 

  <div class="home">
    <a href="/">Home</a>
  </div> 

